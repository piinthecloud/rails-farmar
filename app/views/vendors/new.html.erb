<div class = "new-vendor">

  <div class = "page-header">
    <h2> New Vendor Registration</h2>
  </div>


  <h4>Please enter your vendor information, then click "create": </h4>

  <div class = "form">
    <%= form_for @vendor do |f| %>
      <div class="field-label">
        <p><%= f.label :name %></p>
        <p><%= f.label :market_id %></p>
        <p><%= f.label :location %></p>
      </div>

      <div class="field-area">
        <p><%= f.text_field :name %></p>
        <p><%= f.text_field :market_id %></p>
        <p><%= f.text_field :location %></p>
      </div>

      <p><%= f.submit "Create" %></p>

    <% end %>
  </div>

  <a class = "home-button" href = "/">Home</a>

